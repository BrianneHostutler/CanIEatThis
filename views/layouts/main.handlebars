        2016 Copyright Jamie Jahdasha Brianne
    </footer> -->

<!-- Modal javascript -->
<script src="javascript/additives.js"></script>
<!-- Modernizr javascript - Used by our modal -->
<script src="javascript/modernizr.js"></script>
<!-- UPC scanner javascript -->
<script src="javascript/quagga.min.js" type="text/javascript"></script>
<!-- Main app javascript -->
<script src="javascript/script.js"></script>
</body>

</HTML>